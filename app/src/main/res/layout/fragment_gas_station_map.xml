        <View
            android:id="@+id/coverLyaout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:id="@+id/settings_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center|bottom"
            android:background="@color/icons"
            android:visibility="gone">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="?actionBarSize"
                    android:text="@string/search_address"
                    android:textSize="@dimen/text_size_main"
                    android:id="@+id/button"
                    android:layout_weight="1"
                    android:background="@drawable/tab_indicator_background"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="?actionBarSize"
                    android:text="@string/proximity"
                    android:textSize="@dimen/text_size_main"
                    android:id="@+id/button2"
                    android:layout_weight="1"
                    android:background="@drawable/tab_indicator_background"
                    style="@style/Widget.AppCompat.Button.Colored"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="?actionBarSize"
                    android:text="@string/search_setting"
                    android:textSize="@dimen/text_size_main"
                    android:id="@+id/button3"
                    android:layout_weight="1"
                    android:background="@drawable/tab_indicator_background"
                    style="@style/Widget.AppCompat.Button.Colored"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/settings_layout"
            android:id="@+id/sub_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:visibility="gone">

            <!--<include-->
            <!--android:id="@+id/app_bar2"-->
            <!--layout="@layout/app_bar" />-->

            <FrameLayout
                android:id="@+id/sub_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/station_list_view"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:background="@color/icons"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/gas_station_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_view"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:background="@color/icons"
            android:visibility="gone">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fine_ps_star_grey" />


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:id="@+id/station_name" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="약8분"
                            android:textColor="@color/sub_text"
                            android:id="@+id/time" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" / "
                            android:textColor="@color/sub_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:textColor="@color/sub_text"
                            android:id="@+id/distance" />
                        </LinearLayout>
                    </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="길안내"
                        android:layout_alignParentRight="true"
                        android:id="@+id/detail_button"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:background="@color/second_background">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="휘발유" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1890원"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/gas" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/border_left">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="경유" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="1910원"
                            android:id="@+id/disel" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/border_left">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="고급휘발유" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="2090원"
                            android:id="@+id/hgas" />
                    </LinearLayout>
                </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fine_ps_map_point_grey"/>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Large Text"
                            android:textSize="14dp"
                            android:id="@+id/station_adress" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fine_ps_phone"/>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="02-2267-8025"
                            android:textSize="14dp"
                            android:textColor="@color/sub_text"
                            android:id="@+id/station_phone" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/third_background">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fine_ps_btn_cart"/>

                        <TextView
                            android:id="@+id/conv_store"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/primary_text"
                            android:text="편의점"
                            android:textSize="12dp"
                            android:gravity="center" />


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fine_ps_btn_oil"/>

                        <TextView
                            android:id="@+id/self"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/primary_text"
                            android:text="셀프"
                            android:textSize="12dp"
                            android:gravity="center" />


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fine_ps_btn_cart"/>

                        <TextView
                            android:id="@+id/direct"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/primary_text"
                            android:text="직영점"
                            android:textSize="12dp"
                            android:gravity="center" />


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fine_ps_btn_fix"/>

                        <TextView
                            android:id="@+id/repair"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/primary_text"
                            android:text="정비소"
                            android:textSize="12dp"
                            android:gravity="center" />


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fine_ps_btn_car"/>

                        <TextView
                            android:id="@+id/wash"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/primary_text"
                            android:text="세차"
                            android:textSize="12dp"
                            android:gravity="center" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:padding="20dp">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/find_ps_icon_list"
                app:fabSize="mini"
                app:backgroundTint="@color/floatingButton"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:src="@drawable/find_ps_icon_magnifyin_glass"
                app:fabSize="mini"
                app:backgroundTint="@color/floatingButton"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:padding="20dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="3km"
                    android:textSize="12dp"
                    android:elevation="16dp"
                    android:textColor="@android:color/white"
                    android:id="@+id/radius_text"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="Action A"
                    app:fabSize="mini"
                    app:backgroundTint="@color/floatingButton"/>


            </FrameLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:src="@drawable/find_ps_icon_my_point"
                app:fabSize="mini"
                app:backgroundTint="@color/floatingButton"/>

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>