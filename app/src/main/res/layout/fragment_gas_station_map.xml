    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/map_layout">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/abc_action_bar_title_item">

        </fragment>

        <LinearLayout
            android:id="@+id/settings_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center|bottom"
            android:background="@color/icons">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="?actionBarSize"
                    android:text="@string/search_address"
                    android:textSize="@dimen/text_size_main"
                    android:id="@+id/button"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="?actionBarSize"
                    android:text="@string/proximity"
                    android:textSize="@dimen/text_size_main"
                    android:id="@+id/button2"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="?actionBarSize"
                    android:text="@string/search_setting"
                    android:textSize="@dimen/text_size_main"
                    android:id="@+id/button3"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_below="@+id/settings_layout"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:text="반경: 3km"
            android:textSize="@dimen/text_size_radius_button"
            android:textColor="@color/icons"
            android:layout_alignParentLeft="true"
            android:layout_margin="12dp"
            android:background="@color/secondary_text"
            android:id="@+id/radius"
            android:textAllCaps="false"/>

        <View
            android:id="@+id/coverLyaout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/station_list_view"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:background="@color/icons"
            android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/gas_station_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/detail_view"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:background="@color/icons"
            android:visibility="gone">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:id="@+id/station_name" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/distance" />
                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="예약하기"
                        android:layout_alignParentRight="true"
                        android:id="@+id/detail_button"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="휘발유" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1890"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:id="@+id/gas" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="경유" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="1910"
                            android:id="@+id/disel" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="고급휘발유" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="2090원"
                            android:id="@+id/hgas" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Large Text"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:id="@+id/station_adress" />

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="길찾기"-->
                        <!--android:textColor="@color/icons"-->
                        <!--android:background="@drawable/rectangle_border"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:id="@+id/textView10" />-->
                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02-2267-8025"
                        android:id="@+id/station_phone" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/conv_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/icons"
                        android:text="편의점"
                        android:textSize="12dp"
                        android:background="@drawable/rectangle_border"
                        android:visibility="gone"
                        android:layout_marginRight="3dp"/>

                    <TextView
                        android:id="@+id/self"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/icons"
                        android:text="셀프"
                        android:textSize="12dp"
                        android:background="@drawable/rectangle_border"
                        android:visibility="gone"
                        android:layout_marginRight="3dp"/>

                    <TextView
                        android:id="@+id/direct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/icons"
                        android:text="직영점"
                        android:textSize="12dp"
                        android:background="@drawable/rectangle_border"
                        android:visibility="gone"
                        android:layout_marginRight="3dp"/>

                    <TextView
                        android:id="@+id/repair"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/icons"
                        android:text="정비소"
                        android:textSize="12dp"
                        android:background="@drawable/rectangle_border"
                        android:visibility="gone"
                        android:layout_marginRight="3dp"/>

                    <TextView
                        android:id="@+id/wash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/icons"
                        android:text="세차"
                        android:textSize="12dp"
                        android:background="@drawable/rectangle_border"
                        android:visibility="gone"
                        android:layout_marginRight="3dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sub_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:clickable="true"
            android:visibility="gone">

            <include
                android:id="@+id/app_bar2"
                layout="@layout/app_bar" />

            <FrameLayout
                android:id="@+id/sub_context"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>